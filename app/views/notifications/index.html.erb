<p id="notice"><%= notice %></p>

<div class="content-left-new-page"> <%# LEFT-HAND MAIN CONTENT BLOCK %>
<div class="content-white-background">

<h1>Listing Notifications: <%= Notification.all.count %> in total</h1>

<table class="admin-table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= link_to notification.id, edit_notification_path(notification) %></td>
        <td><%= notification.user.email unless !notification.user %></td>
        <td><%= notification.story.id unless !notification.story %></td>
        <td><%= notification.notificationtype.id unless !notification.notificationtype %></td>
        <td><%= notification.notificationtype.name unless !notification.notificationtype %></td>
        <td><%= notification.update_token unless !notification.update_token %></td>

        <td><%= link_to 'D?', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification', new_notification_path %>

</div>
</div>