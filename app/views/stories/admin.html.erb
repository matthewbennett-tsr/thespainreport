<% title 'All Stories' %>

<h1>Edit All Stories</h1>

<div class="article-lede">There are <strong><%= @storycount %></strong> stories.</div>

<div class="index-non-home">
  <div class="listing-left">Updated</div>
  <div class="listing-right">Latest Stories</div>
  <div class="clear"></div>
</div>

<% @stories.each do |story| %>
  <div style="width:100%; padding-top: 3px; font-size: 13px;">
    <div style="width: 9%; float:left;">
      <%= story.updated_at.to_formatted_s(:short) %>
    </div>
    <div style="width: 10%; margin-right: 5px; float:left; text-align:right; font-size: 13px;">
      <% if story.status == 'archived' %>
        <span class="admin-draft">
      <% elsif story.status == 'active' %>
        <span class="admin-published">
      <% else %>
      
      <% end %>
      <%= story.status.capitalize unless story.status.blank? %></span> <%= link_to 'E', edit_story_path(story) %> <%= link_to 'D', story, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <div style="width: 80%; float:right; font-size: 13px;">
    <% if story.urgency == 'majorbreaking' %>
        <span class="breaking">MAJOR BREAKING</span>
      <% elsif story.urgency == 'breaking' %>
        <span class="breaking">BREAKING</span>
      <% elsif story.urgency == 'latest' %>
        <span class="latest">LATEST</span>
      <% else %>
      <% end %>
         <strong><%= link_to story.story, story unless story.story.nil? %></strong><br /><%= story.description unless story.description.nil? %>

    </div>
    <div style="clear:both;"></div>   
  </div> 
    <% end %>
