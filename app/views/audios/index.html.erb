<h1>Listing Audios</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @audios.each do |audio| %>
      <tr>
        <td><strong><%= audio.updated_at.to_formatted_s(:short) %></strong></td>
        <td><%= audio.url %></td>
        <td><%= link_to 'S', audio %></td>
        <td><%= link_to 'E', edit_audio_path(audio) %></td>
        <td><%= link_to 'D', audio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>