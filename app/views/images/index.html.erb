<p id="notice"><%= notice %></p>

<h1>Listing Images</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Url</th
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= link_to image.id, edit_image_path(image) %></td>
        <td><%= image.description %></td>
        <td>![<%= image.description %>](<%= image.url %> "<%= image.description %>")</td>
        <td><%= link_to 'D?', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

