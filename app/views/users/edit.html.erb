      <div class="subscription-left-label-input">
        Card CVC/Security Code:
      </div>
      <div class="subscription-right-form-element">
        <input type="text" id="cc-cvc" class="inputgeneral cc-cvc" size="3" maxlength="4" data-stripe="cvc" placeholder="•••" autocomplete="off" required/>
      </div>
      <div class="clear"></div>
    </div>
    
  </div>
    
    <div class="subscription-form-section-bottom">  
      <div class="subscription-left-label-input">
        
      </div>
      <div class="subscription-right-form-element">
        <button type="submit" class="blueformbutton" style="z-index: 1000;">Save New Card</button>
      </div>
      <div class="clear"></div>
    </div>
    
      <div class="clear"></div>
      
      <input type="hidden" name="customer_id" id="customer_id" value="<%= @user.stripe_customer_id %>">
      <% if @user.subscriptions.any? %>
      <input type="hidden" name="tsr_subscription_id" id="tsr_subscription_id" value="<%= @user.subscriptions.order(:created_at).last.id %>">
      <% else %>
      <% end %>
      <input type="hidden" name="old_card" id="old_card" value="<%= @user.credit_card_id %>">
      <input type="hidden" name="user_id" id="user_id" value="<%= @user.id %>">
<% end %>
</div>
</div>

<div class="subscription-block">
	<h3>My Subscription(s)</h3>
	
	<% if @user.subscriptions.any? %>
		<% @user.subscriptions.each do |sub| %>
			<div style="margin-bottom: 20px;">
				<div class="left-15 bold">ID</div><div class="subscription-item-right"><%= sub.stripe_subscription_id %></div><div class="clear"></div>
				<div class="left-15 bold">Created</div><div class="subscription-item-right"><%= Time.at(sub.stripe_subscription_created).strftime("%d/%m/%y") unless sub.stripe_subscription_created.nil? %></div><div class="clear"></div>
				<div class="left-15 bold">Your plan</div><div class="subscription-item-right"><%= sub.stripe_subscription_quantity %> x <%= sub.stripe_subscription_plan %></div><div class="clear"></div>
				<div class="left-15 bold">Purchased In</div><div class="subscription-item-right"><%= sub.stripe_subscription_ip_country_name %> <%= image_tag(sub.stripe_subscription_ip_country + '.jpg', :height => 18) %> (<%= sub.stripe_subscription_ip %>)</div><div class="clear"></div>
				<div class="left-15 bold">Price</div><div class="subscription-item-right"><%= sub.stripe_currency == 'gbp' ? '£' : '€' %><%= sprintf("%.2f",(sub.stripe_subscription_amount/100.round(2))) %> / <%= sub.stripe_subscription_interval %> + <%= sub.stripe_subscription_tax_percent %>% VAT</div><div class="clear"></div>
				<div class="left-15 bold">Status</div><div class="subscription-item-right"><%= sub.stripe_status.titleize unless sub.stripe_status.nil? %></div><div class="clear"></div>
				<div class="left-15 bold">Current</div><div class="subscription-item-right"><%= Time.at(sub.stripe_subscription_current_period_start_date).strftime("%d/%m/%y") %></div><div class="clear"></div>
				<div class="left-15 bold">Renews on</div><div class="subscription-item-right"><%= Time.at(sub.stripe_subscription_current_period_end_date).strftime("%d/%m/%y") %></div><div class="clear"></div>
				<div class="left-15 bold">Options</div><div class="subscription-item-right">
				<% if ['subscriber', 'subscriber_all_stories', 'subscriber_paused'].include?(@user.role) %>
					<%= form_tag '/one_story', :style => 'float:left; margin-right: 10px;', :id => 'one_story', :name => 'one_story' do %>
						<input type="hidden" name="stripe_subscription_id" id="stripe_subscription_id" value="<%= sub.stripe_subscription_id %>">
						<input type="hidden" name="tsr_subscription_id" id="tsr_subscription_id" value="<%= sub.id %>">
						<input type="hidden" name="user_id" id="user_id" value="<%= @user.id %>">
						<button type="submit" class="linkbutton">
							<% if ['subscriber'].include?(@user.role) %>
							Purchase "One Story"
							<% elsif ['subscriber_all_stories'].include?(@user.role) %>
							Downgrade to "One Story"
							<% elsif ['subscriber_paused'].include?(@user.role) %>
							Restart as "One Story"
							<% end %>
						</button>
					<% end %>
				<% end %>
				<% if ['subscriber', 'subscriber_one_story', 'subscriber_paused', 'editor'].include?(@user.role) %>
					<%= form_tag '/all_stories', :style => 'float:left; margin-right: 10px;', :id => 'all_stories', :name => 'all_stories' do %>
						<input type="hidden" name="stripe_subscription_id" id="stripe_subscription_id" value="<%= sub.stripe_subscription_id %>">
						<input type="hidden" name="tsr_subscription_id" id="tsr_subscription_id" value="<%= sub.id %>">
						<input type="hidden" name="user_id" id="user_id" value="<%= @user.id %>">
						<button type="submit" class="linkbutton">
							<% if ['subscriber'].include?(@user.role) %>
							Purchase "All Stories"
							<% elsif ['subscriber_one_story'].include?(@user.role) %>
