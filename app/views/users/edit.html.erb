						<input type="hidden" name="stripe_subscription_id" id="stripe_subscription_id" value="<%= sub.stripe_subscription_id %>">
						<input type="hidden" name="tsr_subscription_id" id="tsr_subscription_id" value="<%= sub.id %>">
						<input type="hidden" name="user_id" id="user_id" value="<%= @user.id %>">
						<button type="submit" class="linkbutton">Pause your subscription</button>
					<% end %>
				<% end %>
				</div>
