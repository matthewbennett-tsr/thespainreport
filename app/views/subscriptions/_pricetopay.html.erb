<div class="subscription-form-section-middle">
	<div class="subscription-left-label-select">
		Discount:
	</div>
	<div class="subscription-right-form-element">
		<% if controller_name == 'subscriptions' && ["spain_new", "spain_prepay"].include?(action_name) %>
			€
		<% elsif controller_name == 'subscriptions' && ["new", "prepay"].include?(action_name) %>
			£
		<% end %>
		<span id="d"></span>
	</div>
	<div class="clear"></div>
</div>

<div class="subscription-form-section-middle">
	<div class="subscription-left-label-select">
		Subtotal:
	</div>
	<div class="subscription-right-form-element">
		<% if controller_name == 'subscriptions' && ["spain_new", "spain_prepay"].include?(action_name) %>
			€
		<% elsif controller_name == 'subscriptions' && ["new", "prepay"].include?(action_name) %>
			£
		<% end %>
		<span id="p"></span>
	</div>
	<div class="clear"></div>
</div>

<div class="subscription-form-section-middle">
	<div class="subscription-left-label-select">
		VAT:
	</div>
	<div class="subscription-right-form-element">
		<% if controller_name == 'subscriptions' && ["spain_new", "spain_prepay"].include?(action_name) %>
			€
		<% elsif controller_name == 'subscriptions' && ["new", "prepay"].include?(action_name) %>
			£
		<% end %>
		<span id="r"></span>
		<img src="" name="tax_flag" id="tax_flag" />
		<span name="country_name" id="country_name"></span>
	</div>
	<div class="clear"></div>
</div>

<div class="subscription-form-section-middle">
	<div class="subscription-left-label-select">
		Total:
	</div>
	<div class="subscription-right-form-element">
		<% if controller_name == 'subscriptions' && ["spain_new", "spain_prepay"].include?(action_name) %>
			€
		<% elsif controller_name == 'subscriptions' && ["new", "prepay"].include?(action_name) %>
			£
		<% end %>
		<span id="t"></span>
		<% if controller_name == 'subscriptions' && ["new", "spain_new"].include?(action_name) %>
			 / month
		<% elsif controller_name == 'subscriptions' && ["prepay", "spain_prepay"].include?(action_name) %>
			 / one-time
		<% end %>
	</div>
	<div class="clear"></div>
</div>