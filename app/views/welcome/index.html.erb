<%= render 'tickerstories' %>

<div class="content-wrapper">
<div class="content-left-main">
<div class="content-left-new">
<div class="content-left-top">
<div style="">
<div class="home-page-top-story">
<% @lasttopstory.each do |article| %>
<% if article.main? %>
        <div style="width:100%; margin-bottom: 3px;">
          <%= link_to(article) do %>
          <%= image_tag article.main.url if article.main? %>
          <% end %>
        </div>
      <% elsif article.video? %>
          <div class="video-wrapper">
          <%= content_tag(:iframe, nil, frameborder: 0, src: "//www.youtube.com/embed/#{article.video}?rel=0&amp;showinfo=0") %>
          </div>
    <% else %>
<% end %>
<div style="margin-top: 5px;">
<h1 style="font-size: 26px; line-height: 120%; margin:0px;"><%= link_to article.headline, article %></h1>
<div style="font-family: Georgia; margin-top: 7px; padding-bottom: 3px; margin-bottom: 7px;"><strong><%= article.type.name %>:</strong> <%= article.body.truncate(225) %> (<%= link_to 'Read full story', article %>).</div>

<% if article.newsitems.present? %> <%# POST ANY PUBLISHED UPDATES TO THE ARTICLE %>
    <ul style="margin-top: 0px; margin-bottom: 10px; margin-left: 30px; margin-right: 0;">
    <% article.newsitems.each do |newsitem| %>
        <li style="margin: 0 auto; text-align:left; font-style: normal;">
        <%= link_to newsitem.slug, article_url(newsitem.article, anchor: newsitem.id) %>
        </li>
    <% end %>
    </ul>
  <% end %>
  
<div style="margin-top: 5px;">
<span class="feed-item-date"><%= article.created_at.to_formatted_s(:short) %></span>
<% if article.urgency == 'majorbreaking' && article.created_at >= 2.hours.ago %>
  <span class="breaking-label-mini">MAJOR BREAKING</span>
<% elsif article.urgency == 'breaking' && article.created_at >= 2.hours.ago %>
  <span class="breaking-label-mini">BREAKING</span>
<% elsif article.urgency == 'latest' && article.created_at >= 12.hours.ago %>
  <span class="latest-label-mini">LATEST</span>
<% else %>
<% end %>
<% if article.type.name == 'EDITORIAL' %>
 <span class="editorial-label-mini">EDITORIAL</span>
<% end %>
<% if article.type.name == "LIVE BLOG" %>
 <span class="breaking-label-mini">LIVE BLOG</span> 
<% end %>
</div>
  
<% end %>


</div>
</div>
</div>


</div>

<% @lasttwenty.each do |article| %>

<div class="content-white-background" style="margin-bottom: 10px;">
      <%= link_to article do %>
        <% if article.main? %>
          <div style="width:100%; margin-bottom: 3px;">
              <%= image_tag article.main.url if article.main? %>
          </div>
        <% elsif article.video? %>
          <div class="video-wrapper">
            <%= content_tag(:iframe, nil, frameborder: 0, src: "//www.youtube.com/embed/#{article.video}?rel=0&amp;showinfo=0") %>
          </div>
        <% else %>
        <% end %>
        <p style="margin: 7px 0; font-weight:bold; font-family: Oswald; font-size: 16px;"><%= article.headline %></p>
        <p style="font-size: 14px; font-family: Georgia;"><strong><%= article.type.name %>:</strong>
        <% if ["DAILY BRIEFING", "LIVE BLOG"].include?(article.type.try(:name)) %>
          <%= article.lede %>
        <% else %>
          <%= article.lede %>
        <% end %>
        </p>
        <p style="font-size: 11px; margin-top: 5px; ">
        <span class="feed-item-date"> <%= article.created_at.to_formatted_s(:short) %></span>
        <span class="listing-update-slug">
          <% if article.urgency == 'majorbreaking' && article.created_at >= 2.hours.ago %>
        <span class="listing-update-slug"><span class="breaking-label-mini">MAJOR BREAKING</span>
  <% elsif article.urgency == 'breaking' && article.created_at >= 2.hours.ago %>
        <span class="listing-update-slug"><span class="breaking-label-mini">BREAKING</span> 
 <% elsif article.urgency == 'latest' && article.created_at >= 12.hours.ago %>
        <span class="listing-update-slug"><span class="latest-label-mini">LATEST</span>   
   <% else %>
 <% end %>
  <% if article.type.name == "LIVE BLOG" %>
        <span class="listing-update-slug"><span class="breaking-label-mini">LIVE BLOG</span>  
    <% end %>
    <% if article.type.name == 'EDITORIAL' %>
        <span class="listing-update-slug"><span class="editorial-label-mini">EDITORIAL</span>
    <% end %>
    <% if article.type.name == 'ANALYSIS' %>
        <span class="listing-update-slug"><span class="editorial-label-mini">ANALYSIS</span>
    <% end %>
    <% if article.type.name == 'DAILY BRIEFING' %>
        <span class="listing-update-slug"><span class="latest-label-mini">DAILY BRIEFING</span>
    <% end %>
    <% if !["NEWS", "DAILY BRIEFING", "EDITORIAL", "ANALYSIS", "BLOG", "LIVE BLOG"].include?(article.type.try(:name)) %>
        <span class="listing-update-slug"><span class="indepth-label-mini">IN-DEPTH</span>
    <% end %>
        </span>
        </p>
      <% end %>
    </div>
<% end %>

</div>

<div class="content-right">
  
  <div class="sidebar-header-top-new" style="margin-top: 10px;">Latest Article Updates</div>

    <% @latestupdates.each do |newsitem| %>
    <div class="content-white-background">
      <% if newsitem.article.present? %>
        <%= link_to article_url(newsitem.article, anchor: newsitem.id) do %>
            <% if newsitem.main? %>
              <div style="width:100%; margin-bottom: 3px;">
                <%= image_tag newsitem.main.url if newsitem.main? %>
              </div>
            <% elsif newsitem.video? %>
              <div style="width:100%; margin-bottom: 3px;">
                <div class="video-wrapper">
                  <%= content_tag(:iframe, nil, frameborder: 0, src: "//www.youtube.com/embed/#{newsitem.video}?rel=0&amp;showinfo=0") %>
                </div>
              </div>
            <% else %>
            <% end %>
            <p><span style="font-weight:bold; font-family: Oswald; font-size: 13px;"><%= newsitem.slug %></span></p>
            <p style="font-size: 12px;"><%= newsitem.item.truncate(150) %></p>
            <p style="font-size: 11px; margin-top: 5px; ">
              <span class="feed-item-date"><%= newsitem.created_at.to_formatted_s(:short) %></span>
              <% if newsitem.article.type.name == "LIVE BLOG" %>
                <span class="breaking-label-mini">LIVE BLOG</span>
              <% end %>
            </p>
        <% end %>
      <% else %>
        <%= link_to newsitem do %>
            <% if newsitem.main? %>
              <div style="width:100%; margin-bottom: 3px;">
                <%= image_tag newsitem.main.url if newsitem.main? %>
              </div>
            <% elsif newsitem.video? %>
              <div style="width:100%; margin-bottom: 3px;">
              <div class="video-wrapper">
                <%= content_tag(:iframe, nil, frameborder: 0, src: "//www.youtube.com/embed/#{newsitem.video}?rel=0&amp;showinfo=0") %>
              </div>
              </div>
            <% else %>
            <% end %>
            <p><span style="font-weight:bold; font-family: Oswald; font-size: 13px;"><%= newsitem.slug %></span></p>
            <p style="font-size: 12px;"><%= newsitem.item.truncate(150) %></p>
            <p style="font-size: 11px; margin-top: 5px; ">
              <span class="feed-item-date"><%= newsitem.created_at.to_formatted_s(:short) %></span>
            </p>
        <% end %>
      <% end %>
      </div>
<% end %>

</div>

<div class="clear"></div>

</div>
</div>