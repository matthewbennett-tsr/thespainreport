.blueformbutton {
    font-family: Oswald; font-size: 16px;
    height: 33px; padding: 5px 7px 7px 7px;
    background-color: #AA151B; background-image: linear-gradient(top bottom, #003333 0, #003333 100%); background-repeat: repeat-x;
    text-decoration: none !important; text-shadow: 0 0 0px #37538d;
    color: #F1BF00 !important;
    line-height: 1em;
    border-radius: 0px;
    border: 0px ;
    -webkit-border-radius: 0px;
    -moz-border-radius: 0px;
    -webkit-transition-duration: 0.2s;
    -moz-transition-duration: 0.2s;
    transition-duration: 0.2s;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

.blueformbutton:hover, a.blueformbutton:hover  {
	cursor: pointer;
	color:#ffe680 !important;
	-webkit-box-shadow:inset 0 1px 1px rgba(255,255,255,.2), 0 1px 2px rgba(5,15,30,.4);
	box-shadow:inset 0 1px 1px rgba(255,255,255,.2), 0 1px 2px rgba(5,15,30,.4);
	background-image:-webkit-linear-gradient(top, #AA151B 0, #AA151B 100%);
	background-image:linear-gradient(to bottom, #AA151B 0, #AA151B 100%);
	background-repeat:repeat-x;filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#3b5998', endColorstr='#ff37538d', GradientType=0);
	border-color:#213256;
	text-shadow:0;
	}
	
